<div class="container">
    <div class="card">
        <h1>Eat-Da-Burger!</h1>

        <div id="img-div"><img src="/assets/img/happyhamburger.png" alt="Happy Hamburger"></div>

        <h2 class>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="burger">Burger Name:</label>
                <input type="text" id="burger-input" name="burger_name">
            </div>

            <button id="add-button">Add Burger</button>
        </form>

        <br>
        <br>
        <br>

        <div class="card">
            <h2>Burgers that are waiting to be Eaten</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <div class="row">
                    <li class="uneaten">
                        {{id}}. {{burger_name}}
                    </li>
                    <button class="change-devoured" data-id="{{id}}" data-newDevour="true">Eat
                        It!</button>
                    <button id="compost-button" data-id="{{id}}">Compost It!</button>
                </div>
                {{/unless}}
                {{/each}}
            </ul>

        </div>


        <br>

        <div class="card">
            <h2>Burgers that have been Devoured</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <div class="row">
                    <li class="eaten">
                        {{id}}. {{burger_name}}
                    </li>
                    <button class="change-devoured" data-id="{{id}}" data-newDevour="false">Regurgitate
                        It!</button>
                </div>
                {{/if}}
                {{/each}}
            </ul>
        </div>


    </div>
</div>